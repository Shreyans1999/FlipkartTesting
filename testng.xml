<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Flipkart Hybrid Framework Test Suite" parallel="false">
    
    <!-- Configure TestListener for automatic reporting -->
    <listeners>
        <listener class-name="com.flipkart.core.listeners.TestListener"/>
    </listeners>
    
    <!-- ==================== AUTHENTICATION TESTS ==================== -->
    <test name="Authentication Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.flipkart.tests.authentication.AuthenticationTests"/>
        </classes>
    </test>
    
    <!-- ==================== END-TO-END TESTS ==================== -->
    <test name="E2E Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.flipkart.tests.e2e.SiteLaunchTests"/>
            <class name="com.flipkart.tests.e2e.ProductSearchTests"/>
            <class name="com.flipkart.tests.e2e.ProductFilterTests"/>
            <class name="com.flipkart.tests.e2e.CategoryBrowsingTests"/>
            <class name="com.flipkart.tests.e2e.CartAndOrderTests"/>
            <class name="com.flipkart.tests.e2e.FlightBookingTests"/>
        </classes>
    </test>

</suite>
