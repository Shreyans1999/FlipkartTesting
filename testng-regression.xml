<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Flipkart Regression Test Suite (Login Required)" parallel="false">
    
    <!-- 
        REGRESSION SUITE - Requires Manual OTP Entry
        These tests require user to login and manually enter OTP.
        Wait time for OTP entry is 30 seconds per test.
    -->
    
    <listeners>
        <listener class-name="com.flipkart.core.listeners.TestListener"/>
    </listeners>
    
    <!-- ==================== AUTHENTICATION TESTS ==================== -->
    <test name="Authentication Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.flipkart.tests.authentication.AuthenticationTests"/>
        </classes>
    </test>
    
    <!-- ==================== CART & ORDER TESTS (Login Required) ==================== -->
    <test name="Cart and Order Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.flipkart.tests.regression.CartAndOrderTests"/>
        </classes>
    </test>

</suite>
